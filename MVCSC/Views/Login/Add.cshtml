@model MVCSC.Product
@{
    ViewBag.Title = "Add";
}


<div class="row justify-content-md-center">
    <div class="col-md-5">
        @using (Html.BeginForm("Add", "Login", FormMethod.Post))
        {
            //@Html.ValidationSummary()
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-header">
                    <div class="card-title">Register</div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(m => m.CATEGORY_ID)
                        @*@Html.TextBoxFor(m => m.CATEGORY_ID, new { @class = "form-control", @placeholder = "CATEGORY ID" })*@
                        @Html.DropDownList("CATEGORY_ID", (IEnumerable<SelectListItem>)ViewBag.Add, null, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.PRODUCT_ID)
                        @Html.TextBoxFor(m => m.PRODUCT_ID, "", new { @class = "form-control", @placeholder = "PRODUCT ID" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PRODUCT_NAME)
                        @Html.TextBoxFor(m => m.PRODUCT_NAME, "", new { @class = "form-control", @placeholder = "PRODUCT NAME" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PRODUCT_DESCRIPTION)
                        @Html.TextBoxFor(m => m.PRODUCT_DESCRIPTION, "", new { @class = "form-control", @placeholder = "PRODUCT DESCRIPTION" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PRODUCT_PRICE)
                        @Html.TextBoxFor(m => m.PRODUCT_PRICE, "", new { @class = "form-control", @placeholder = "PRODUCT PRICE" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PRODUCT_COUNT)
                        @Html.TextBoxFor(m => m.PRODUCT_COUNT, new { @class = "form-control", @placeholder = "PRODUCT COUNT" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.PRODUCT_REVIEW)
                        @Html.TextBoxFor(m => m.PRODUCT_REVIEW, new { @class = "form-control", @placeholder = "PRODUCT REVIEW" })
                    </div>


                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-danger" value="Add" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>


